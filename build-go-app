# 构建go app，生成bin文件和配置文件
FROM my-go-build:1.20.2 AS build

MAINTAINER ronnie

LABEL version="1.0.0"

ARG repo
ARG branch_name
ARG project_name
ARG service_name

WORKDIR /work

RUN mkdir -p /work/code
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go env -w GO111MODULE=on
RUN git clone ${repo} -b ${branch_name} /work/code
RUN cd /work/code/${project_name}/cmd/${service_name} && go build -o /work/${project_name}-${service_name} ./...
RUN cp -r /work/code/${project_name}/configs /work/
RUN rm -rf /work/code

# 导出构建到宿主机上
FROM scratch AS export
COPY --from=build /work/ .